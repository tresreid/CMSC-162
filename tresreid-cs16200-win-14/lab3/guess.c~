//guess.c

#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]){
  int target1;
  int guess;
  int limit;
  if(argc == 1){
    limit = 100;
  }
  else{
    if(strcmp(argv[1],"-n")==0){
      sscanf(argv[2],"%d", &limit);
    }
  }
  srand(time(NULL));
  target1 = rand() % limit +1;
  do{
    puts("guess a number: ");
    scanf("%d", &guess);
    if(guess < target1){
      puts("Too Low");
    }
    else if(guess > target1){
      puts("too high");
    }
  } while (target1 != guess);
  puts ("You got it");
  return 0;
}
