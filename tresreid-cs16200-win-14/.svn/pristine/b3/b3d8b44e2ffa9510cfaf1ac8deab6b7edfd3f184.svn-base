#!/usr/bin/python

import sys
import re
import math

f = open(sys.argv[1], 'r') 
file1 = f.read()
f.close()

f = open(sys.argv[2], 'r') 
file2 = f.read()
f.close()


def wordFreq (file):
    word_list = re.split('\s+', file)
    freq_dic = {}
    normalized = {}
    freqSq =[]
    punctuation = re.compile(r'[.?!,":;]')
    for word in word_list:
        word = punctuation.sub("", word)
        try:
            freq_dic[word] += 1
        except:
            freq_dic[word] = 1
            freq_list = freq_dic.items()
    for key in freq_dic:
        freqSq += [freq_dic[key]**2]
    for key in freq_dic:
        normalized[key] = freq_dic[key]/ math.sqrt(sum(freqSq))
    return normalized

def distance (norm1, norm2):
    abslist =[]
    d3 = dict(norm1, **norm2)
    for key in d3:
        abslist += [(norm1.get(key,0) - norm2.get(key,0))]
        squareabs = [i ** 2 for i in abslist]
    dis = math.sqrt(sum(squareabs))
    return dis

print(distance(wordFreq(file1), wordFreq(file2)))
print(distance(wordFreq(file2), wordFreq(file1)))

